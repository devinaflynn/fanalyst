<div class="container2">
  <% if flash[:error] %>
    <div class="alert alert-danger" role="alert">
      <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
      <span class="sr-only">Error:</span>
      <%= flash[:error] %>
    </div>
  <% end %>
  <% if flash[:notice] %>
    <div class="alert alert-success" role="alert">
      <%= flash[:notice] %>
    </div>
  <% end %>
  <% if flash[:alert] %>
    <div class="alert alert-warning" role="alert">
      <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
      <span class="sr-only">Attention:</span>
      <%= flash[:alert] %>
    </div>
  <% end %>

  <div class="row">
    <h1>User <%= @user.email %></h1>
    <h3>Rank: 4</h3>
    <h4>Avg. Score: 289</h4>
  </div>

  <div class="row">
    <div class="col-xs-6">
      <div class="row">
        <div class="col-xs-6">
        <% if @teams %>
          <ul>
            <% @teams.each do |team| -%>
              <li>
                <%= image_tag team.image %><br>
                <%= team.notes %>
              </li>
            <% end %>
          </ul>
        <% else %>
          <%= form_tag charges_path do %>
            <%= hidden_field_tag :subcription_user_id, @user.id %>
            <%= hidden_field_tag :price, @user.price %>

            <article>
             <h4>4 lineups</h4>
              <label class="amount">
                <span>Amount: <%= number_to_currency(@user.price.round(2)) %></span>
              </label>
            </article>

            <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                    data-description="12h of full access."
                    data-amount="<%= (@user.price.round(2)*100).to_i %>"></script>
          <% end %>

        <% end %>

        <img src="http://i.imgur.com/dQjUvAn.png">
       
        </div>
      </div>
    </div>
    <div class="col-xs-6">
     
        <% @results.each do |result| -%>

           <div class= "alert alert-danger" >
      
          <%= result.score %><br>
          <%= image_tag result.image %><br>
          <%= result.notes %>

          </div>
     
        <% end %>
     
    </div>
  </div>
</div>
