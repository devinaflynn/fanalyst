<p id="notice"><%= notice %></p>

<div class="container2">

<h1>Listing Teams</h1>

</div>

<table>
  <thead>
    <tr>
      <th>Notes</th>
      <th>Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= image_tag team.image.url(:thumb) %></td>
        <td><%= team.notes %></td>
        <td><%= team.score %></td>
        <td><%= team.user.email if team.user %></td>
        <td><%= link_to 'View Team', team , class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Team', new_team_path %>
