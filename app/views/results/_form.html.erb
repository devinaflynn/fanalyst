<div class="container3">
  <%= form_for @result, url: team_result_path(@team), html: {multipart: true} do |f| %>
  <% if @result.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@result.errors.count, "error") %> prohibited this team from being saved:</h2>

      <ul>
        <% @result.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <div class="col-md-5 col-md-offset-3">
       <div class="container2">
      <h1><%= @result.persisted? ? 'Update' : 'Add' %> result</h1>

      <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image, class: "form-control" %>
        <% if @result.image.exists? %>
          <img id="file" src="<%= @result.image.url %>">
        <% else %>
          <img id="file" src="#" alt="team image" style="display: none">
        <% end %>
      </div>
      <div class="form-group">
        <%= f.label :score %><br>
        <%= f.text_field :score, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :notes %><br>
        <%= f.text_area :notes, class: "form-control" %>
      </div>
      <div class="actions">
        <%= f.submit @result.persisted? ? 'Update' : 'Add', class: "btn btn-primary" %>

        <%= link_to 'Back', edit_team_path(@team), role: 'button', class: 'btn btn-danger' %>
      </div>
    </div>
  </div>

<% end %>
</div>
