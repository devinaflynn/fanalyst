<div class="col-md-7 col-md-offset-3">
  <div class="container2">

    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-8 well well-sm">
        <div class="form-group">

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <div class="form-group">
              <%= f.email_field :email, :placeholder => "Your Email", autofocus: true, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.password_field :password, :placeholder => "Your Password", autocomplete: "off", class: "form-control" %>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end -%>

            <div class="actions">
              <%= f.submit "Log in", class: "btn btn-success btn-block btn-lg" %>
              <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-primary btn btn-block btn-lg", style: "margin-top: 7 px;" if resource_name != :admin %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>

        </div>
      </div>

      <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-60459974-1', 'auto');
        ga('send', 'pageview');

      </script>
    </div>
  </div>
</div>
