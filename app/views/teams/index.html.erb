<p id="notice"><%= notice %></p>

<div class="container2">

<h1>My Teams</h1>


<table>
  <thead>
    <tr>
      <th>Notes</th>
      <th>Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= image_tag team.image.url(:thumb) %></td>
        <td><%= team.notes %></td>
        <td><%= team.user.email if team.user %></td>
        <td><%= link_to 'View Team', team , class: "btn btn-primary btn btn-sm", style: "margin-right:5px; margin-left:10px;" %></td>
        <td><%= link_to 'Add Results', team , class: "btn btn-success btn btn-sm", style: "margin-right:5px;"%></td>
        <td><%= link_to 'Edit', edit_team_path(team), class: "btn btn-warning btn btn-sm", style: "margin-right:5px;" %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn btn-sm", style: "margin-right:5px;" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Team', new_team_path, class: "btn btn-success" %>

</div>
